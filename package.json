{
  "name": "supervia-notification-service",
  "version": "1.0.0",
  "description": "Microservice pour l'envoi de notifications (email, push, WebSocket) pour SupervIA",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --runInBand --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "swagger:gen": "node scripts/generate-swagger.js",
    "setup": "npm install && npm run swagger:gen",
    "health": "curl -f http://localhost:3005/health || exit 1",
    "docker:build": "docker build -t supervia-notification-service .",
    "docker:run": "docker run -p 3005:3005 --env-file .env supervia-notification-service"
  },
  "keywords": [
    "supervia",
    "microservice",
    "notification",
    "email",
    "websocket",
    "push-notification"
  ],
  "author": "SupervIA Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-prom-bundle": "^8.0.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase-admin": "^12.0.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "joi": "^17.13.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.7",
    "pino": "^8.17.2",
    "pino-http": "^9.0.0",
    "prom-client": "^15.1.0",
    "react-toastify": "^11.0.5",
    "redis": "^4.6.10",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zkerkeb-class/notification-mail-sms-service-Tadayoshi123"
  }
}
